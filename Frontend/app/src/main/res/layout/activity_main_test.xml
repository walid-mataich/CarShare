<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF7F2">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#F0AB46"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tokenText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Token :"
        android:textColor="#6A6A6A"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/userInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Infos utilisateur :"
        android:textColor="#6A6A6A"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tokenText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Se dÃ©connecter"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F0AB46"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_rounded_orange"/>
</androidx.constraintlayout.widget.ConstraintLayout>
