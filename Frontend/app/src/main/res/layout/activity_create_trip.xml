<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF7F2"
    tools:context=".View.CreateTripActivity">

    <!-- Titre -->
    <TextView
        android:id="@+id/createTripTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer un trajet"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#F0AB46"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Conducteur ID -->
    <EditText
        android:id="@+id/driverIdInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="ID du conducteur"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/input_bg"
        app:layout_constraintTop_toBottomOf="@id/createTripTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Bouton origine -->
    <Button
        android:id="@+id/originBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Choisir l’origine"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_rounded_orange"
        app:layout_constraintTop_toBottomOf="@id/driverIdInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Texte origine -->
    <TextView
        android:id="@+id/originText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aucune origine sélectionnée"
        android:textColor="#6A6A6A"
        app:layout_constraintTop_toBottomOf="@id/originBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Bouton destination -->
    <Button
        android:id="@+id/destinationBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Choisir la destination"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_rounded_orange"
        app:layout_constraintTop_toBottomOf="@id/originText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Texte destination -->
    <TextView
        android:id="@+id/destinationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aucune destination sélectionnée"
        android:textColor="#6A6A6A"
        app:layout_constraintTop_toBottomOf="@id/destinationBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Date et heure -->
    <EditText
        android:id="@+id/dateTimeInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Date et heure"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:background="@drawable/input_bg"
        app:layout_constraintTop_toBottomOf="@id/destinationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Nombre de places -->
    <EditText
        android:id="@+id/seatsInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nombre de places"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/input_bg"
        app:layout_constraintTop_toBottomOf="@id/dateTimeInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Prix -->
    <EditText
        android:id="@+id/priceInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Prix"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="@drawable/input_bg"
        app:layout_constraintTop_toBottomOf="@id/seatsInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Bouton créer trajet -->
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Créer le trajet"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_rounded_orange"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/priceInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
